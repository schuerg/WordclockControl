<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    android:layout_margin="@dimen/margin_medium">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Effekt"
            android:id="@+id/textView"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ES IST"
            android:id="@+id/textView2"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/effect" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/fullText"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vordergrund"
        android:id="@+id/textFgColor" />

    <SeekBar
            android:id="@+id/fgHue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/fgSaturation"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/fgValue"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hintergrund"
        android:id="@+id/textBgColor"
        android:layout_marginTop="@dimen/margin_medium" />

    <SeekBar
        android:id="@+id/bgHue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/bgSaturation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/bgValue"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_time"
        android:id="@+id/sync_button"/>

    <Button android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/save_button"/>

</LinearLayout>
